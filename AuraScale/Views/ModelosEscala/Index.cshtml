@model IEnumerable<AuraScale.Models.ModeloEscala>

@{
    ViewData["Title"] = "Modelos de Escala";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <h1><i class="fa fa-cogs"></i> Modelos de Escala</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa fa-plus"></i> Novo Modelo
    </a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-start border-4 border-primary">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-white">@item.Nome</h5>
                    <p class="card-text text-muted">
                        <i class="fa fa-clock"></i> Diária: @item.CargaHorariaDiaria.ToString(@"hh\:mm")<br />

                        @if (item.RegraSabado != AuraScale.Models.TipoTrabalhoSabado.NaoTrabalha)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Não</span>
                        }
                        <br />

                        @if (item.TrabalhaDomingo)
                        {
                            <span class="text-success"><i class="fa fa-check"></i> Dom (Trabalha)</span>
                        }
                        else
                        {
                            <span class="text-danger"><i class="fa fa-times"></i> Dom (Folga)</span>
                        }
                    </p>
                </div>
                <div class="card-footer bg-transparent border-top-0 d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                        <i class="fa fa-pencil"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                        <i class="fa fa-trash"></i> Excluir
                    </a>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Você ainda não criou nenhum modelo de escala (Ex: 5x2, 6x1).<br />
            Clique em "Novo Modelo" para começar.
        </div>
    }
</div>