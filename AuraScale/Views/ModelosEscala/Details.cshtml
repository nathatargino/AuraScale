@model AuraScale.Models.ModeloEscala

@{
    ViewData["Title"] = "Detalhes do Modelo";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">

                <div class="card-header bg-dark text-white py-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-info text-white rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fa fa-layer-group fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">@Model.Nome</h4>
                            <span class="text-info small text-uppercase fw-bold">Regras de Escala</span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-muted small text-uppercase mb-3">Dias Úteis (Seg-Sex)</h6>
                            <div class="p-3 rounded-3">
                                <label class="text-muted small d-block">Carga Horária</label>
                                <span class="fw-bold fs-5">@Model.CargaHorariaDiaria.ToString(@"hh\:mm")h</span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="fw-bold text-muted small text-uppercase mb-3">Fim de Semana</h6>

                            <div class="mb-3">
                                <label class="text-muted small d-block">Sábados</label>
                                @if (Model.RegraSabado == AuraScale.Models.TipoTrabalhoSabado.NaoTrabalha)
                                {
                                    <span class="badge bg-danger rounded-1">FOLGA</span>
                                }
                                else
                                {
                                    <span class="badge bg-success rounded-1">TRABALHA (@Model.CargaHorariaSabado?.ToString(@"hh\:mm")h)</span>
                                }
                            </div>

                            <div>
                                <label class="text-muted small d-block">Domingos</label>
                                @if (Model.TrabalhaDomingo)
                                {
                                    <span class="badge bg-success rounded-1">TRABALHA</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-1">FOLGA</span>
                                }
                            </div>
                        </div>
                    </div>

                    <hr class="my-4 opacity-25" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary px-4">Voltar</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                            <i class="fa fa-edit me-2"></i>Editar Regras
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>