<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="fa fa-chart-line me-2 text-primary"></i> Painel de Gestão</h2>
            <p class="text-muted mb-0">
                Bem-vindo ao AuraScale, @(User.Identity?.IsAuthenticated == true ? User.Identity.Name : "Visitante").
            </p>
        </div>

        <div class="d-flex align-items-center gap-3">
            <a asp-controller="Escalas" asp-action="Configurar" class="btn btn-success rounded-pill px-4 shadow-sm fw-bold">
                <i class="fa fa-magic me-2"></i> Gerar Escala
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 bg-dark text-white h-100 p-2">
                <div class="card-body text-center">
                    <i class="fa fa-users fa-2x mb-2 text-info"></i>
                    <h6 class="text-uppercase small opacity-75">Equipe Total</h6>
                    <h2 class="display-6 fw-bold mb-0">@ViewBag.TotalOperadores</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 bg-success text-white h-100 p-2">
                <div class="card-body text-center">
                    <i class="fa fa-check-circle fa-2x mb-2"></i>
                    <h6 class="text-uppercase small opacity-75">Trabalhando Hoje</h6>
                    <h2 class="display-6 fw-bold mb-0">@ViewBag.TrabalhandoHoje</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 bg-secondary text-white h-100 p-2">
                <div class="card-body text-center">
                    <i class="fa fa-mug-hot fa-2x mb-2"></i>
                    <h6 class="text-uppercase small opacity-75">De Folga</h6>
                    <h2 class="display-6 fw-bold mb-0">@ViewBag.FolgaHoje</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 bg-info text-dark h-100 p-2">
                <div class="card-body text-center">
                    <i class="fa fa-layer-group fa-2x mb-2"></i>
                    <h6 class="text-uppercase small opacity-75">Modelos Ativos</h6>
                    <h2 class="display-6 fw-bold mb-0">@ViewBag.TotalModelos</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <h5 class="fw-bold text-dark mb-4"><i class="fa fa-tasks me-2 text-primary"></i> Gerenciamento de Operações</h5>

                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Operadores" asp-action="Index" class="btn btn-outline-dark w-100 text-start p-4 rounded-4 border-dashed shadow-sm">
                            <i class="fa fa-user-friends fa-2x mb-3 text-primary"></i>
                            <h6 class="fw-bold mb-1">Minha Equipe</h6>
                            <p class="small text-muted mb-0">Cadastre e gerencie os perfis dos seus operadores.</p>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="ModelosEscala" asp-action="Index" class="btn btn-outline-dark w-100 text-start p-4 rounded-4 border-dashed shadow-sm">
                            <i class="fa fa-clock fa-2x mb-3 text-info"></i>
                            <h6 class="fw-bold mb-1">Modelos de Trabalho</h6>
                            <p class="small text-muted mb-0">Defina regras de sábado, domingo e carga horária.</p>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Escalas" asp-action="Index" class="btn btn-outline-dark w-100 text-start p-4 rounded-4 border-dashed shadow-sm">
                            <i class="fa fa-calendar-check fa-2x mb-3 text-success"></i>
                            <h6 class="fw-bold mb-1">Calendário de Escalas</h6>
                            <p class="small text-muted mb-0">Visualize, edite e acompanhe os turnos gerados.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>