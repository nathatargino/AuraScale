@model IEnumerable<AuraScale.Models.Escala>
@{
    ViewData["Title"] = "Escala Semanal";

    var inicio = (DateTime)ViewBag.InicioSemana;
    var fim = (DateTime)ViewBag.FimSemana;
    var operadores = (List<AuraScale.Models.Operador>)ViewBag.Operadores;

    // Dias da semana para o cabeçalho
    var diasSemana = new List<DateTime>();
    for (int i = 0; i < 7; i++) { diasSemana.Add(inicio.AddDays(i)); }
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h2 class="mb-0"><i class="fa fa-calendar-alt text-info"></i> Escala Semanal</h2>
        <p class="text-muted small mb-0">
            De @inicio.ToString("dd/MM") a @fim.ToString("dd/MM")
        </p>
    </div>

    <div class="btn-group">
        <a asp-action="Index" asp-route-dataRef="@inicio.AddDays(-7).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
            <i class="fa fa-chevron-left"></i> Anterior
        </a>
        <a asp-action="Index" asp-route-dataRef="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
            Hoje
        </a>
        <a asp-action="Index" asp-route-dataRef="@inicio.AddDays(7).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
            Próxima <i class="fa fa-chevron-right"></i>
        </a>
    </div>

    <a asp-action="Configurar" class="btn btn-success shadow-sm ms-3">
        <i class="fa fa-magic"></i> Gerar Novo
    </a>
</div>

<div class="card shadow border-0 overflow-auto">
    <div class="card-body p-0">
        <table class="table table-bordered table-striped text-center mb-0 align-middle">
            <thead class="bg-primary text-white">
                <tr>
                    <th class="text-start ps-3" style="min-width: 150px;">Funcionário</th>
                    @foreach (var dia in diasSemana)
                    {
                        var classeHoje = dia.Date == DateTime.Today ? "bg-warning text-dark" : "";
                        <th class="@classeHoje" style="min-width: 100px;">
                            <div class="small opacity-75">@dia.ToString("ddd").ToUpper()</div>
                            <div class="fw-bold">@dia.Day</div>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var op in operadores)
                {
                    <tr>
                        <td class="text-start fw-bold text-primary ps-3">
                            <i class="fa fa-user-circle me-1"></i> @op.Nome
                        </td>

                        @foreach (var dia in diasSemana)
                        {
                            // Procura se existe escala para este operador neste dia
                            var escala = Model.FirstOrDefault(e => e.OperadorId == op.Id && e.Data.Date == dia.Date);

                            <td>
                                @if (escala != null)
                                {
                                    // TRABALHA
                                    <span class="d-block fw-bold text-dark">
                                        @escala.Entrada.ToString(@"hh\:mm") - @escala.Saida.ToString(@"hh\:mm")
                                    </span>

                                    // Se for deletar, add um botãozinho discreto aqui depois
                                }
                                else
                                {
                                    // FOLGA (Não tem registro no banco)
                                    <span class="badge bg-secondary opacity-25 fw-normal">Folga</span>
                                }
                            </td>
                        }
                    </tr>
                }

                @if (!operadores.Any())
                {
                    <tr>
                        <td colspan="8" class="py-5 text-muted">
                            Nenhum operador encontrado. <a asp-controller="Operadores" asp-action="Create">Cadastre sua equipe</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>