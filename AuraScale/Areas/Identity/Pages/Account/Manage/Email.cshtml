@page
@model EmailModel
@{
    ViewData["Title"] = "Gerenciar E-mail";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0 rounded-4 bg-transparent">
        <div class="card-header bg-dark text-white py-4 px-4 border-0 rounded-top-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 55px; height: 55px;">
                    <i class="fa fa-envelope fa-lg text-white"></i>
                </div>
                <div class="ms-3">
                    <h4 class="mb-0 fw-bold">Alterar E-mail</h4>
                    <p class="mb-0 opacity-75 small">Mantenha seu contato sempre atualizado</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5 pt-2 pt-md-3">
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="email-form" method="post">
                <div asp-validation-summary="All" class="text-danger small mb-4"></div>

                <div class="row g-4">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label fw-bold small text-muted text-uppercase">E-mail Atual</label>
                            <div class="input-group">
                                <input asp-for="Email" class="form-control form-control-lg border-0 shadow-sm" style="opacity: 0.7;" disabled />
                                <span class="input-group-text bg-success border-0 shadow-sm text-success"><i class="fa fa-check-circle text-dark-emphasis"></i></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.NewEmail" class="form-label fw-bold small text-muted text-uppercase">Novo E-mail</label>
                            <input asp-for="Input.NewEmail" class="form-control form-control-lg border-0 shadow-sm" placeholder="exemplo@email.com" />
                            <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3 pt-4 border-top text-end">
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-lg px-4 rounded-pill fw-bold shadow-sm">
                        <i class="fa fa-paper-plane me-2"></i> ALTERAR E-MAIL
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>