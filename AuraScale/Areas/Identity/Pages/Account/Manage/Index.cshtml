@page
@model IndexModel
@{
    ViewData["Title"] = "Meu Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0 rounded-4 bg-transparent">
        <div class="card-header bg-dark text-white py-4 px-4 border-0 rounded-top-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 55px; height: 55px;">
                    <i class="fa fa-id-card fa-lg text-white"></i>
                </div>
                <div class="ms-3">
                    <h4 class="mb-0 fw-bold">Dados do Gerente</h4>
                    <p class="mb-0 opacity-75 small">Atualize suas informações de contato no AuraScale</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-4"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label bg- fw-bold small text-muted text-uppercase">Nome de Usuário</label>
                            <input asp-for="Username" class="form-control form-control-lg border-0 shadow-sm" style="opacity: 0.7;" disabled />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label fw-bold small text-muted text-uppercase">Telefone de Contato</label>
                            <input asp-for="Input.PhoneNumber" class="form-control form-control-lg border-0 shadow-sm" placeholder="(00) 00000-0000" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-5 pt-4 border-top d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                    <div class="text-muted small">
                        <i class="fa fa-info-circle me-1 text-primary"></i>
                        Para alterar e-mail ou senha, acesse as opções no menu lateral.
                    </div>
                    <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg px-4 rounded-pill fw-bold shadow-sm">
                        <i class="fa fa-check-circle me-2"></i> ATUALIZAR DADOS
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>