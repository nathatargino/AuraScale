@page
@model Disable2faModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Desativar autenticação de dois fatores (2FA)"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0 rounded-4 bg-transparent border-danger">
        <div class="card-header bg-danger text-white py-4 px-4 border-0 rounded-top-4">
            <div class="d-flex align-items-center">
                <div class="bg-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 55px; height: 55px;">
                    <i class="fa fa-unlock-alt fa-lg text-danger"></i>
                </div>
                <div class="ms-3">
                    <h4 class="mb-0 fw-bold">@Localizer["Desativar 2FA"]</h4>
                    <p class="mb-0 opacity-100 small">@Localizer["Sua conta ficará menos segura"]</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="alert alert-secondary border-0 shadow-sm rounded-4 mb-4">
                <p class="mb-0">
                    <i class="fa fa-info-circle me-2"></i>
                    @Localizer["Esta ação apenas desativa a autenticação em duas etapas. Ela não altera as chaves do seu aplicativo autenticador."]
                </p>
            </div>

            <p class="text-muted">
                @Localizer["Ao desativar, você precisará apenas da sua senha para entrar no sistema. Recomendamos manter o 2FA ativo para proteger os dados do AuraScale."]
            </p>

            <form method="post">
                <div class="mt-4 pt-4 border-top d-flex justify-content-end">
                    <button class="btn btn-outline-secondary btn-lg px-4 rounded-pill fw-bold me-3" type="button" onclick="history.back()">
                        @Localizer["CANCELAR"]
                    </button>
                    <button class="btn btn-danger btn-lg px-4 rounded-pill fw-bold shadow-sm" type="submit">
                        @Localizer["DESATIVAR 2FA AGORA"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>