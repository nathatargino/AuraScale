@page
@model EnableAuthenticatorModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Configurar aplicativo autenticador"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0 rounded-4 bg-transparent">
        <div class="card-header bg-dark text-white py-4 px-4 border-0 rounded-top-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 55px; height: 55px;">
                    <i class="fa fa-shield-alt fa-lg text-white"></i>
                </div>
                <div class="ms-3">
                    <h4 class="mb-0 fw-bold">@Localizer["Autenticação em Duas Etapas"]</h4>
                    <p class="mb-0 opacity-75 small">@Localizer["Aumente a segurança da sua conta no AuraScale"]</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-4">
            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="alert alert-info border-0 shadow-sm rounded-4 mb-3">
                <i class="fa fa-info-circle me-2"></i>
                @Localizer["Para usar um aplicativo autenticador, siga as etapas abaixo:"]
            </div>

            <ol class="list-group list-group-flush mb-4 rounded-4 mb-3">
                <li class="list-group-item bg-transparent py-3">
                    <p class="mb-2 fw-bold">1. @Localizer["Baixe um aplicativo autenticador"]</p>
                    <small class="text-muted">@Localizer["Ex: Microsoft Authenticator ou Google Authenticator."]</small>
                </li>
                <li class="list-group-item bg-transparent py-3 text-center">
                    <p class="mb-3 fw-bold">2. @Localizer["Escaneie o QR Code ou insira esta chave"]</p>
                    <div class="d-flex justify-content-center mb-4">
                        <div id="qrCode" class="p-3 shadow-lg rounded-3 border"></div>
                    </div>

                    <div class="bg-light p-3 rounded border text-black-50 text-center font-monospace mb-2" style="letter-spacing: 2px;">
                        @Model.SharedKey
                    </div>
                    <div class="text-muted small">@Localizer["Seu aplicativo autenticador mostrará um código de 6 dígitos após o escaneamento."]</div>
                </li>
            </ol>

            <form id="send-code" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.Code" class="form-label fw-bold small text-muted text-uppercase">@Localizer["Código de Verificação"]</label>
                            <input asp-for="Input.Code" class="form-control form-control-lg border-0 shadow-sm" autocomplete="off" placeholder="000 000" />
                            <span asp-validation-for="Input.Code" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill fw-bold shadow-sm">
                            <i class="fa fa-check-circle me-2"></i> @Localizer["VERIFICAR E ATIVAR"]
                        </button>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mt-3 small"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* Biblioteca para QR Code *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <script type="text/javascript">
        new QRCode(document.getElementById("qrCode"), {
            text: "@Html.Raw(Model.AuthenticatorUri)",
            width: 160,
            height: 160
        });
    </script>
}