@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar no AuraScale";
    ViewData["HideNavbar"] = true;
}

<style>
    
    .login-container {
        position: fixed; 
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000; 
        overflow-y: auto; 
    }

    .bg-aura-dark {
        background: linear-gradient(135deg, #212529 0%, #343a40 100%);
    }

    /* AJUSTE PARA TELAS 1366x768 */
    @@media (max-height: 800px) {
        .card {
            max-width: 780px; 
        }

        .p-4 {
            padding: 1.25rem !important; 
        }

        h2 {
            font-size: 1.5rem;
        }

        h4 {
            font-size: 1.2rem;
        }

        .fa-4x {
            font-size: 2.8rem; 
        }

        .mb-4 {
            margin-bottom: 1rem !important;
        }

        .mb-3 {
            margin-bottom: 0.75rem !important;
        }
    }
</style>

<div class="login-container">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="width: 900px;">
        <div class="row g-0">

            <div class="col-md-5 bg-aura-dark text-white d-flex align-items-center justify-content-center p-4 text-center">
                <div>
                    <div class="mb-4">
                        <i class="fa fa-layer-group fa-4x opacity-75"></i>
                    </div>
                    <h2 class="fw-bold mb-3">AuraScale</h2>
                    <p class="small opacity-75">
                        Gestão inteligente de escalas e equipes.
                        Otimize seu tempo e foque no que importa.
                    </p>
                </div>
            </div>

            <div class="col-md-7 bg-body p-4">
                <div class="text-center mb-4">
                    <h4 class="fw-bold text-dark">Bem-vindo de volta!</h4>
                    <p class="text-muted small">Acesse sua conta para gerenciar escalas.</p>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="" />
                        <label asp-for="Input.Email" class="text-muted">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" placeholder="" />
                        <label asp-for="Input.Password" class="text-muted">Sua Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label small text-muted" asp-for="Input.RememberMe">Lembrar de mim</label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none fw-bold">Esqueceu a senha?</a>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-bold mb-2 shadow-sm">
                        ENTRAR
                    </button>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="position-relative mb-3">
                            <hr class="text-muted opacity-25">
                            <span class="position-absolute top-50 start-50 translate-middle bg-body px-2 small text-muted">OU</span>
                        </div>
                    }
                </form>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark w-100 py-2 rounded-3 d-flex align-items-center justify-content-center gap-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/150px-Google_%22G%22_logo.svg.png" style="width: 20px; height: 20px;" alt="Google" />
                            <span>Entrar com @provider.DisplayName</span>
                        </button>
                    }
                </form>

                <div class="text-center mt-4">
                    <span class="small text-muted">Ainda não tem conta?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small fw-bold text-decoration-none">Criar conta agora</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}