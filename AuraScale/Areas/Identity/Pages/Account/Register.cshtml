@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar Conta";
    ViewData["HideNavbar"] = true;
}

<style>
    /* AJUSTE DE CENTRALIZAÇÃO APENAS */
    .register-container {
        position: fixed; 
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        z-index: 1000;
        overflow-y: auto; 
    }

    .bg-aura-dark {
        background: linear-gradient(135deg, #212529 0%, #343a40 100%);
    }

    /* Inputs */
    .form-floating > .form-control {
        height: 50px;
        min-height: 50px;
    }

    .form-floating > label {
        padding-top: 0.85rem;
    }

    .card {
        max-width: 850px;
        width: 100%;
    }

    /* AJUSTE PARA TELAS 1366x768 */
    @@media (max-height: 800px) {
        .card {
            max-width: 750px;
        }
        .p-4 {
            padding: 1rem !important;
        }
        h2, h4 {
            font-size: 1.4rem;
        }
        .fa-4x {
            font-size: 2.5rem;
        }
        p.small {
            font-size: 0.8rem;
        }

        .form-floating mb-2 {
            margin-bottom: 0.5rem !important;
        }
    }
</style>

<div class="register-container">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="width: 900px;">
        <div class="row g-0 flex-row-reverse">

            <div class="col-md-5 bg-aura-dark text-white d-flex align-items-center justify-content-center p-4 text-center">
                <div>
                    <div class="mb-4">
                        <i class="fa fa-rocket fa-4x text-info"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Comece Agora</h3>
                    <p class="small opacity-75">
                        Junte-se ao AuraScale e transforme a maneira como você gerencia sua equipe.
                    </p>
                </div>
            </div>

            <div class="col-md-7 bg-body p-4">
                <div class="text-center mb-4">
                    <h4 class="fw-bold text-dark">Criar Nova Conta</h4>
                    <p class="text-muted small">Preencha os dados abaixo para começar.</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="" />
                        <label asp-for="Input.Email" class="text-muted">Seu E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="new-password" placeholder="" />
                                <label asp-for="Input.Password" class="text-muted">Senha</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" placeholder="" />
                                <label asp-for="Input.ConfirmPassword" class="text-muted">Confirmar Senha</label>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small d-block mb-2"></span>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small d-block mb-2"></span>

                    <button id="registerSubmit" type="submit" class="btn btn-dark w-100 py-2 rounded-3 fw-bold mb-2 shadow-sm">
                        CADASTRAR GRATUITAMENTE
                    </button>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="position-relative mb-4">
                            <hr class="text-muted opacity-25">
                            <span class="position-absolute top-50 start-50 translate-middle bg-body px-2 small text-muted">OU</span>
                        </div>
                    }
                </form>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark w-100 py-2 rounded-3 d-flex align-items-center justify-content-center gap-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/150px-Google_%22G%22_logo.svg.png" style="width: 20px; height: 20px;" alt="Google" />
                            <span>Cadastrar com @provider.DisplayName</span>
                        </button>
                    }
                </form>

                <div class="text-center mt-4">
                    <span class="small text-muted">Já tem uma conta?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="small fw-bold text-decoration-none">Fazer Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}